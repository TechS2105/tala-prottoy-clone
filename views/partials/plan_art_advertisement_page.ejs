<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/images/Favicon/favicon.png">
    <link rel="stylesheet" href="/styles/Plan Art & Advertisement/plan_art_advertisement.css">
    <title><%= planArtAdvertisementPage.split("-").map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ') %></title>
</head>
<body>
    
    <!-- Header -->
    <%- include('../partials/header.ejs') %>

    <!-- Plan Art & Advertisement Main Parent Section -->
    <div class="plan-art-advertisement-main-parent-section">

        <main>

            <!-- Inner Section -->
            <% plan_art_advertisement.forEach((plan_art_advertisement_data) => { %> 

                <% if(planArtAdvertisementPage.split("-").map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ') === plan_art_advertisement_data.page_name) { %> 
                
                    <div class="plan-art-advertisement-inner-section">

                        <!-- Image Section -->
                        <div class="plan-art-advertisement-image-section">

                            <img src="<%= plan_art_advertisement_data.page_hero_image %>" alt="<%= plan_art_advertisement_data.page_hero_image_alttext %>">

                        </div>

                        <!-- Second Button Bar -->
                        <%- include('../partials/secondbuttonbar.ejs') %>

                        <!-- Plan Your Visit -->
                        <% if(plan_art_advertisement_data.page_name === 'Plan Your Visit'){ %> 
                        
                            <%- include('../Plan Art & Advertisement/plan_your_visit.ejs', {pageData: plan_art_advertisement_data}) %>
                            
                        <% } %>

                        <!-- Art & Artist -->
                        <% if(plan_art_advertisement_data.page_name === 'Art & Artist'){ %>
                        
                            <%- include('../Plan Art & Advertisement/art_artist.ejs') %>
                        
                        <% } %>

                    </div> 
                    
                    <% if(plan_art_advertisement_data.page_name === 'Art & Artist' || plan_art_advertisement_data.page_name === 'Advertisement'){ %> 
                
                        <%- include('../partials/Buttonbar.ejs') %>
                    
                    <% } %>

                <% } %>

                
                
            <% }) %>

            <!-- Proud Winner -->
            <%- include('../partials/Proudwinner.ejs') %>

        </main>

        <!-- Footer -->
        <%- include('../partials/footer.ejs') %>

    </div>

</body>
</html>